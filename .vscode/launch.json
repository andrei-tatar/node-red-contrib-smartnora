{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "args": [
                "${file}",
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register/type-check",
            ],
            "env": {
                "TS_NODE_FILES": "true",
            },
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector"
        }
    ]
}